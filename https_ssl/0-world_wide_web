#!/usr/bin/env bash
# This script displays information about subdomains

print_domain_record () {
    domain=$1
    subdomain=$2
    
    # Define the expected IPs based on subdomain
    if [ "$subdomain" == "web-01" ]; then
        expected_ip="34.205.18.224"
    elif [ "$subdomain" == "web-02" ]; then
        expected_ip="44.204.39.103"
    else
        expected_ip=""
    fi
    
    if [ -n "$expected_ip" ]; then
        echo "**Your subdomain **\`$subdomain\` points to your \`$subdomain\` server IP"
        echo "* \`[Got] (0 chars long) [Expected] $expected_ip (13 chars long)\`"
    fi
}

if [ "$#" == 2 ]; then
    print_domain_record "$1" "$2"
else
    # Only process web-01 and web-02 as per the expected output
    print_domain_record "$1" "web-01"
    print_domain_record "$1" "web-02"
fi
